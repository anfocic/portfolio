{
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "jsx": "react-jsx",
      "rootDir": "./src",
      "moduleResolution": "Node",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.glb"],
    "exclude": [
      "node_modules"
    ]
  }
  